<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.idevel.volunteer">

  <application
      android:name="com.idevel.volunteer.MyApplication"
      android:allowBackup="false"
      android:hardwareAccelerated="true"
      android:icon="@mipmap/app_icon_4"
      android:label="@string/app_name"
      android:largeHeap="true"
      android:requestLegacyExternalStorage="true"
      android:theme="@style/MyAppTheme"
      android:usesCleartextTraffic="true">

    <meta-data
        android:name="iap:api_version"
        android:value="5" />

    <meta-data
        android:name="iap:view_option"
        android:value="popup | full" />

    <!-- ACTIVITY -->
    <activity
        android:name="com.idevel.volunteer.activity.MainActivity"
        android:configChanges="locale|keyboard|keyboardHidden|orientation|uiMode|screenSize|fontScale|smallestScreenSize|screenLayout"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustResize">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />

        <!-- scheme-->
        <data
            android:host="show-app"
            android:scheme="idevel-volunteer" />
      </intent-filter>
    </activity>

    <activity
        android:name="com.idevel.volunteer.activity.PushPopupActivity"
        android:excludeFromRecents="true"
        android:screenOrientation="unspecified"
        android:taskAffinity="com.medialog.umobi.pushPopup"
        android:theme="@android:style/Theme.Dialog" />

    <!--DEV-->
    <activity
        android:name="com.idevel.volunteer.activity.DevActivity"
        android:theme="@style/Base.Theme.AppCompat" />

    <!-- RECEIVER -->
    <!-- Network change receiver -->
    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <!-- DataSaver change receiver -->
    <receiver
        android:name="com.idevel.volunteer.broadcast.DataSaverChangeReceiver"
        android:enabled="true"
        android:exported="false"
        android:label="DataSaverChange"></receiver>

    <!-- Network Change receiver -->
    <receiver android:name="com.idevel.volunteer.broadcast.NetworkChangeReceiver">
      <intent-filter>
        <action android:name="android.net.conn.BACKGROUND_DATA_SETTING_CHANGED" />
      </intent-filter>
    </receiver>

    <!-- SERVICE -->
    <service
        android:name="com.idevel.volunteer.fcm.FcmInstanceIDService"
        android:enabled="true"
        android:exported="true">
      <intent-filter>
        <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
      </intent-filter>
    </service>

    <service
        android:name="com.idevel.volunteer.fcm.FcmListenerService"
        android:exported="false">
      <intent-filter>
        <action android:name="com.google.firebase.MESSAGING_EVENT" />
      </intent-filter>
    </service>


    <!--    <receiver-->
    <!--        android:name=".fcm.GcmBroadcastReceiver"-->
    <!--        android:permission="com.google.android.c2dm.permission.SEND" >-->
    <!--      <intent-filter>-->
    <!--        &lt;!&ndash; Receives the actual messages. &ndash;&gt;-->
    <!--        <action android:name="com.google.android.c2dm.intent.RECEIVE" />-->
    <!--        <category android:name="com.google.android.gcm.demo.app" />-->
    <!--      </intent-filter>-->
    <!--    </receiver>-->


  </application>

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <uses-permission android:name="android.permission.VIBRATE" />

  <!--  필수권한-->
  <uses-permission android:name="android.permission.READ_PHONE_STATE" />

  <!--  <uses-permission android:name="android.permission.READ_CONTACTS" />&lt;!&ndash;  contacts 관리 &ndash;&gt;-->
  <!--  <uses-permission android:name="android.permission.WRITE_CONTACTS" />-->

  <uses-permission android:name="android.permission.GET_ACCOUNTS" />

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /><!--  현재 기기 위치 -->
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

  <uses-permission android:name="android.permission.CAMERA" /><!--사진 찍기, 비디오 녹화 -->

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /><!--  사진, 미디어 파일 접근-->

  <uses-permission
      android:name="android.permission.WRITE_EXTERNAL_STORAGE"
      android:maxSdkVersion="29" />

  <!--  MANAGE_EXTERNAL_STORAGE 이거 써야함 -->
  <uses-permission
      android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
      tools:ignore="ScopedStorage" />
  <!-- 필수권한 e-->


  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
  <!--  <uses-permission android:name="com.android.vending.BILLING" />-->

</manifest>